@page
@model RazorDemoPageApp.Pages.Employees.ListModel

<div class="mb-3 d-flex justify-content-between">
    <h1 class="mb-3">List of Employees</h1>
    <div>
        <a class="mb-3 btn btn-success" href="/Employees/Add">Add Employee</a>
    </div>
</div>

@if (Model.Employees != null && Model.Employees.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>
                        <a href="/Employees/Edit/@employee.Id" class="btn btn-dark">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees found.</p>
}
